{
  "name": "@wkronmiller/consul-mcp-server",
  "version": "0.0.1",
  "description": "MCP Server for interacting with HashiCorp Consul",
  "license": "MIT",
  "author": "William Rory Kronmiller",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "consul-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:docker": "./test/docker-test.sh",
    "test:all": "npm run test && npm run test:docker",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wkronmiller/mcp-server-consul.git"
  },
  "bugs": {
    "url": "https://github.com/wkronmiller/mcp-server-consul/issues"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@wkronmiller/consul": "^2.0.2",
    "dotenv": "^16.4.5",
    "zod": "^3.22.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
